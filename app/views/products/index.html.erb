<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Colour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.image_url %></td>
        <td><%= product.colour %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-4 col-md-8">
        <div class="thumbnail">
          <%= image_tag("elephantpiece.jpg", class: "img-fluid") if product.image_url %>
          <div class="caption">
            <a href="#"><h2><%= product.name %></h2></a>
            <p><%= product.description %></p>
            <p>Colour: <%= product.colour %></p>
            <strong>$ </strong>
          </div>
        </div>
        <br>
        <p><%= link_to 'Show', product %>
        <p><%= link_to 'Edit', edit_product_path(product) %>
        <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
      <%= render @products %>
    <% end %>
  </div>
</div>

<%= link_to 'New Product', new_product_path %>
